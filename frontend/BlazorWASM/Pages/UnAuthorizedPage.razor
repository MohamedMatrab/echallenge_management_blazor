@page "/unauthorized"
<PageTitle>Unauthorized</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Access Denied</h2>
                </div>
                <div class="card-body">
                    <p class="lead">You are not authorized to access this resource.</p>
                    <p>Please contact your administrator if you believe you should have access.</p>
                    <a href="/" class="btn btn-outline-primary mt-3">
                        <i class="bi bi-house"></i> Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>